-- hallow by MrKMG
-- Version 1

function loadKLIB(file)
    print("Downloading, " .. file)
    local data = http.get("https://raw.github.com/mrkmg/cc_turtle/master/klib/" .. file)
    if data then
        print(file .. " downloaded")
        local file = fs.open(file,"w")
        file.write(data.readAll())
        file.close()
        return true
    end
    dofile(name)
end

function placeTorch(x,y,z)
    if turtle.getItemCount(15) > 0 then
        if ( x % 5 ) == 3 and ( y % 5) == 1 and ( z ) == 2 then
            turtle.select(15)
            turtle.placeDown()
            turtle.select(1)
        end
    end
end

function clearScreen()
    term.clear()
end

function askNumber(question)
    local ans
    local cont = true
    clearScreen()
    while cont == true do -- Width Question
        print(question)
        ans = tonumber(read())
        clearScreen()
        if ans == nil then
            print( "Please answer with a number." )
        elseif ans > 0 then
            cont = false
        elseif ans == 0 then
            print( "Must be greater than 0." )
        else
            print( "Must be positive." )
        end
    end
    return ans
end


width = askNumber("Width?")
height = askNumber("Height?")
length = askNumber("Length")

print("Loading Lib: TGM")
loadKLIB('TGM')
print("Loading Lib: Dig")
loadKLIB('Dig')

bot = TGM.init(1,0,1,0)
dig = Dig.init()


local l = 1
local w = 1
local h = 1
local hDone = 1;
while l <= length do
    h = 2
    while h <= height do
        w = 1
        while w <= width do
            if w == 1 and w ~= width then
                bot:moveTo(w,l-1,h)
                bot:rotateTo(0)
                dig:forward()
            else
                bot:moveTo(w-1,l,h)
                bot:rotateTo(1)
                dig:forward()
            end
            bot:moveTo(w,l,h)
            if h - 1 > hDone then
                dig:down()
            end
            if h - 1 < height then
                dig:up()
            end
            placeTorch(w,l,h)
            w = w + 1
        end

        if h - 1 < height then
            hDone = h + 1
        else
            hDone = h
        end

        if h + 2 <= height then
            h = h + 2
        else
            h = h + 1
        end
    end
    print(l)
    l = l + 1
end

bot:moveTo(1,0,1)
bot:rotateTo(0)
